const prompt = require('prompt-sync')();
function listarContatos(mainMenu, contatos) {
    if (contatos.length === 0) {
        console.log("Nenhum contato cadastrado.");
    } else {
        console.log('\n=== CONTATOS SALVOS NO GERENCIADOR ===');
        
        contatos.forEach((contato, index) => {
            console.log(
                `\n${index + 1}. ID: ${contato.id}, Nome: ${contato.nome}, Telefone: ${contato.telefone}, Email: ${contato.email}`
            );
        });
    }
    console.log("\nPressione Enter para voltar ao menu principal...");
    prompt('');
    
    mainMenu(contatos);
}
module.exports = listarContatos;
